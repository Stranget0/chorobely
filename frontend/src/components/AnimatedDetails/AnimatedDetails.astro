---
interface Props {
  summary: string;
  class?: string;
}
const { summary, class: className } = Astro.props;
---

<style lang='scss'>
  %transition-transform {
    transition: transform 0.2s ease-out;
  }

  .details-button {
    &::before {
      content: "â–¼";
      display: inline-block;
      margin-right: 0.5rem;
      transform: rotate(-90deg);
      @extend %transition-transform;
    }

    & + .content {
      transform: scaleY(0);
      transform-origin: top;

      @extend %transition-transform;
    }

    &.open {
      &::before {
        transform: none;
      }

      + .content {
        transform: scaleY(1);
      }
    }
  }
</style>

<script>
  const detailsButtons =
    document.querySelectorAll<HTMLElement>(".details-button");

  for (const button of detailsButtons) {
    button.addEventListener("click", () => {
      button.classList.toggle("open");
    });
  }
</script>

<section class:list={["details-container flex flex-col", className]}>
  <button type='button' class='details-button'>{summary}</button>
  <div class='content flex flex-col grow'><slot /></div>
</section>
